<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <main class="container">
        <div class="container">
            <h2>@ViewData["Title"]</h2>
            <h2>Список</h2>
            <ol type="A">
                <li>элемент 0 списка</li>
                <li>элемент 1 списка</li>
                <li>элемент 2 списка</li>
            </ol>
            <form method="post" action="/submit">
                <h2>Форма</h2>
                <div class="form-group">
                    <label for="itemsSelect">Выберите элемент:</label>
                    <select asp-items="ViewBag.ItemList" class="form-select" name="selDemo"></select>
                </div>
                <div class="mb-3">
                    <div>
                        <input type="checkbox" id="checkbox1" name="checkboxGroup" value="check1">
                        <label for="checkbox1">Чекбокс 1</label>
                    </div>
                    <div>
                        <input type="checkbox" id="checkbox2" name="checkboxGroup" value="check2">
                        <label for="checkbox2">Чекбокс 2</label>
                    </div>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="radio1" name="radioGroup" value="option1">
                    <label class="form-check-label" for="radio1">Опция 1</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="radio2" name="radioGroup" value="option2">
                    <label class="form-check-label" for="radio2">Опция 2</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="radio3" name="radioGroup" value="option3">
                    <label class="form-check-label" for="radio3">Опция 3</label>
                </div>
                <div class="form-group row">
                    <label for="login" class="col-sm-2 col-form-label">Логин</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="login" name="login" placeholder="Введите имя">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-sm-2 col-form-label">Пароль</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Введите пароль">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Отправить</button>
            </form>
        </div>
    </main>

</body>
</html>